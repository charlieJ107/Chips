    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Firefox",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "Launch Program",
            "command": "npm run dev",
            "serverReadyAction":{
                "action": "startDebugging",
                "name": "Firefox",
                "killOnServerStop": false
            }
        }
    ]
}